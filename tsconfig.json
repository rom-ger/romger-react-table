{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist/",
        "allowJs": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "jsx": "react",
        "lib": ["dom", "es2016", "es2017.object", "es6"],
        "types": ["jest"],
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strict": true,
        "strictFunctionTypes": false,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true
    },
    "include": ["source/**/*", "typings/*"],
    "exclude": ["node_modules", "source/**/*.spec.*"]
}
